  <view class="page__hd">
    <text class="page__title">单选框</text>
  </view>

<radio-group bindchange="checkboxChange">
  <label class="checkbox" wx:for="{{list}}">
    <radio value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
  </label>
</radio-group>
<view class="flex-wrp">
